<Window x:Class="Palicje_MKE.windows.DodajClenek"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Palicje_MKE.windows"
        mc:Ignorable="d"
        Title="Dodaj členek" Height="280"  Width="200" ResizeMode="NoResize" HorizontalAlignment="Stretch" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <local:ClenekControl VerticalAlignment="Top" x:Name="clenekControl"/>

        <Button x:Name="OK_button" Content="OK" Width="50" Margin="0,0,5,0" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Right" Click="OK_button_Click"/>
        <Button x:Name="Cancel_button" Content="Prekliči" IsCancel="True" Width="50"  Margin="0,0,60,0" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Right"/>

    </Grid>
</Window>

