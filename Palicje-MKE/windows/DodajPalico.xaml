<Window x:Class="Palicje_MKE.windows.DodajPalico"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Palicje_MKE.windows"
        mc:Ignorable="d"
        Title="Dodaj palico" Height="200" Width="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <local:PalicaControl VerticalAlignment="Top" x:Name="palicaControl"/>

        <Button x:Name="OK_button" Content="OK" Width="50" Margin="0,0,5,0" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Right" Click="OK_button_Click"/>
        <Button x:Name="Cancel_button" Content="Prekliči" IsCancel="True" Width="50"  Margin="0,0,60,0" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Right"/>

    </Grid>
</Window>
